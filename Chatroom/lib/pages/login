import 'package:flutter/material.dart';
import 'chat.dart';

class Login extends StatefulWidget {
  const Login({super.key});

  @override
  State<Login> createState() => _LoginState();
}

class _LoginState extends State<Login> {
  final TextEditingController nomeControllore = TextEditingController();

  void connect() {
    if (nomeControllore.text.trim().isEmpty) return;

    Navigator.push(
      context,
      MaterialPageRoute(
        builder: (_) => Chat(name: nomeControllore.text.trim()),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Login Chat")),
      body: Center(
        child: SizedBox(
          width: 250,
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              TextField(
                controller: nomeControllore,
                decoration: const InputDecoration(labelText: "Username"),
              ),
              const SizedBox(height: 20),
              ElevatedButton(
                onPressed: connect,
                child: const Text("Entra"),
              )
            ],
          ),
        ),
      ),
    );
  }
}
